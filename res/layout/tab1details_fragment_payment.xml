<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/border2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border2"
            android:layout_marginTop="@dimen/border2"
            android:text="@string/shipping_address"
            android:textSize="@dimen/button_text_size3"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border2"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:textSize="@dimen/button_text_size2" />

            <TextView
                android:id="@+id/last_nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:textSize="@dimen/button_text_size2" />

        </LinearLayout>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border2"
            android:layout_marginTop="@dimen/border2"
            android:textSize="@dimen/button_text_size2" />

        <TextView
            android:id="@+id/mobile_phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border2"
            android:layout_marginTop="@dimen/border2"
            android:textSize="@dimen/button_text_size2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border2"
            android:layout_marginTop="@dimen/border4"
            android:text="Order Summary"
            android:textSize="@dimen/button_text_size3"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_priceTexView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border2"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:textSize="@dimen/button_text_size2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:text="NIS"
                android:textSize="@dimen/button_text_size2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border2"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:text="@string/number_of_items"
                android:textSize="@dimen/button_text_size2" />

            <TextView
                android:id="@+id/items_numberTexView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/border2"
                android:layout_marginTop="@dimen/border2"
                android:textSize="@dimen/button_text_size2" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>