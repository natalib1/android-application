<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/border">

    <LinearLayout
        android:id="@+id/seller_cost_date_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border2"
        android:layout_marginRight="@dimen/border2"
        android:layout_marginTop="@dimen/border2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/border2">

            <TextView
                android:id="@+id/sellerText"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/costumerText"
                android:layout_width="220dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/reservation_dateText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_cost_date_Layout"
        android:layout_margin="@dimen/border2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_marginRight="@dimen/border2"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/product_detailLayout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border2"
            android:layout_marginRight="@dimen/border2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bathing-suit item name"
                android:textSize="@dimen/button_text_size3" />

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bathing-suit item price"
                android:textSize="@dimen/button_text_size" />

            <TextView
                android:id="@+id/shipping_priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bathing-suit item shipping price"
                android:textSize="@dimen/button_text_size2" />

            <!--<TextView-->
                <!--android:id="@+id/colorText"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="bathing-suit item color"-->
                <!--android:textSize="@dimen/button_text_size" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/editImage"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size" />

            <ImageButton
                android:id="@+id/removeImage"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productLayout"
        android:layout_marginLeft="@dimen/border2"
        android:layout_marginRight="@dimen/border2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/codeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>